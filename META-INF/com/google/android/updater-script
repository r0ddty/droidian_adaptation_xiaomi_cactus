ui_print("Mounting sdcard...");
run_program("/system/bin/mkdir", "/m");

ui_print("Mounting rootfs...");
run_program("/system/bin/mount", "/sdcard/rootfs.img", "/m");

ui_print("Applying adaptation...");
run_program("/system/bin/rm", "/m/etc/pulse/default.pa");
package_extract_dir("m", "/m");
run_program("/system/bin/rm", "/m/etc/udev/rules.d/70-.rules");
ui_print("Done!");

